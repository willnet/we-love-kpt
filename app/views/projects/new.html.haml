= form_for @project, html: { class: 'form-horizontal'} do |f|
  %fieldset
    %legend
      new project
    = render 'errors', model: @project
    .control-group
      = f.label :name, class: 'control-label'
      .controls
        = f.text_field :name
    .control-group.form-actions
      = f.submit 'Create Project', class: 'btn'
